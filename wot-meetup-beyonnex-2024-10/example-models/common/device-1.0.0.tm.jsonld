{
  "@context": [
    "https://www.w3.org/2022/wot/td/v1.1"
  ],
  "@type": "tm:ThingModel",
  "title": "Device",
  "description": "The commonly shared device capabilities for all devices",
  "version": {
    "model": "1.0.0"
  },
  "links": [
    {
      "rel": "tm:extends",
      "href": "https://thjaeckle.github.io/slides/wot-meetup-beyonnex-2024-10/example-models/common/location-aware-1.0.0.tm.jsonld",
      "type": "application/tm+json"
    }
  ],
  "tm:optional": [
    "/properties/id"
  ],
  "properties": {
    "id": {
      "title": "Device ID",
      "description": "The unique identifier of this device, only known after installation of device",
      "type": "string",
      "readOnly": true,
      "pattern": "^[0-9a-f]{8}-([0-9a-f]{4}-){3}[0-9a-f]{12}$"
    },
    "serial": {
      "title": "Serial number",
      "description": "The serial number of the device",
      "type": "string",
      "readOnly": true,
      "minLength": 1
    },
    "manufacturer": {
      "title": "Manufacturer",
      "description": "The device manufacturer",
      "type": "string",
      "readOnly": true,
      "minLength": 1
    }
  }
}