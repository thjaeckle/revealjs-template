{
  "@context": [
    "https://www.w3.org/2022/wot/td/v1.1",
    {
      "om2": "http://www.ontology-of-units-of-measure.org/resource/om-2/",
      "xsd": "http://www.w3.org/2001/XMLSchema#"
    }
  ],
  "@type": "tm:ThingModel",
  "title": "Location aware",
  "description": "An asset which is aware of its location while also being aware of what kind of type it is",
  "version": {
    "model": "1.0.0"
  },
  "links": [
    {
      "rel": "tm:extends",
      "href": "https://thjaeckle.github.io/slides/wot-meetup-beyonnex-2024-10/example-models/common/type-aware-1.0.0.tm.jsonld",
      "type": "application/tm+json"
    }
  ],
  "tm:optional": [
    "/properties/location"
  ],
  "properties": {
    "location": {
      "title": "Location",
      "description": "The location of the asset",
      "type": "object",
      "readOnly": true,
      "properties": {
        "buildingId": {
          "title": "Building ID",
          "type": "string",
          "pattern": "^[0-9a-f]{8}-([0-9a-f]{4}-){3}[0-9a-f]{12}$"
        },
        "apartmentId": {
          "title": "Apartment ID",
          "type": "string",
          "pattern": "^[0-9a-f]{8}-([0-9a-f]{4}-){3}[0-9a-f]{12}$"
        },
        "roomId": {
          "title": "Room ID",
          "type": "string",
          "pattern": "^[0-9a-f]{8}-([0-9a-f]{4}-){3}[0-9a-f]{12}$"
        },
        "mountedOn": {
          "@type": "om2:Date",
          "title": "Mounted on",
          "description": "The date on which the device was mounted",
          "type": "string",
          "format": "date",
          "unit": "xsd:date"
        }
      },
      "additionalProperties": false
    }
  }
}
